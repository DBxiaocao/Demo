<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DefaultLineStyle">
        <item name="android:background">@color/default_line_color</item>
    </style>
    <style name="HorizontalLineStyle" parent="DefaultLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <style name="CommonDialog" >
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowBackground">@drawable/rectangle_white_8dp_bg</item>
    </style>
    <style name="BottomToTopAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_anim_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_anim_exit</item>
    </style>
</resources>
